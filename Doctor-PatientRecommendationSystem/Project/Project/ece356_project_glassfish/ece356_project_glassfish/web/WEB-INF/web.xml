    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Core.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>Core.ReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorServlet</servlet-name>
        <servlet-class>Core.DoctorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FriendRequest</servlet-name>
        <servlet-class>Core.FriendRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>Core.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FriendRequestServet</servlet-name>
        <servlet-class>Core.FriendRequestServet</servlet-class>
    </servlet>
    <servlet>
